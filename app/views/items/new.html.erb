<h1>New item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
   	Ordered for:<%= collection_select("purchase", "customer_id" , Customer.find(:all), :id, :name) %>  </p>
  </p>
  <p>
    <%= f.label :recharge_status %><br />
    <%= f.check_box :recharge_status %>
  </p>
  <p>
    <%= f.label :delivery_status %><br />
    <%= f.check_box :delivery_status %>
  </p>
  <p>
    <%= f.label :delivery_date %><br />
    <%= f.date_select :delivery_date %>
  </p>
  <p>
    <%= f.label :invoice_id %><br />
    <%= f.text_field :invoice_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>