<h1>New purchase</h1>
<fieldset class="input-form">
<% form_for(@purchase) do |f| %>
  <%= f.error_messages %>
<ol>
	<li>Ordered by:<%= collection_select("purchase", "user_id" , User.find(:all), :id, :name) %></li>
    <li><%= f.label :purchase_date %>
    <%= f.date_select(:purchase_date, :order => [:day, :month, :year]) %>
</li>
<li>
	Purchased from:<%= collection_select("purchase", "supplier_id" , Supplier.find(:all), :id, :name) %>
</li>
<li>
	<%= f.label 'Delivered to customer address?' %>
    <%= f.check_box :delivered_to_cust %>
</li>
</ol>
</fieldset>
<h2> Items </h2>
  <p>
	<% f.fields_for :items do |builder| %>
		<%= render 'item_fields', :f => builder  %>
	<% end %>
	<p><%= link_to_add_fields "Add Item", f, :items %></p>
    <%= f.submit 'Save' %>
  </p>

<% end %>

<%= link_to 'Back', purchases_path %>